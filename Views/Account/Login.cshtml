@{
    ViewData["Title"] = "Login";
}
<h2 class="text-2xl font-bold mb-4">Login</h2>

@if (ViewBag.Error != null)
{
    <p class="text-red-600">@ViewBag.Error</p>
}

@if (TempData["Message"] != null)
{
    <p class="text-green-600">@TempData["Message"]</p>
}

<form asp-action="Login" method="post" class="space-y-3">
    <input name="email" placeholder="Email" class="border p-2 w-full rounded" />
    <input name="password" placeholder="Password" type="password" class="border p-2 w-full rounded" />
    <button class="bg-blue-600 text-white px-4 py-2 rounded">Login</button>
</form>

<p class="mt-3 text-gray-600">No account? <a href="/Account/Register" class="text-blue-600">Register</a></p>
