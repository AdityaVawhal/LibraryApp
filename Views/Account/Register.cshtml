@model LibraryApp.Models.User
@{
    ViewData["Title"] = "Register";
}
<h2 class="text-2xl font-bold mb-4">Register</h2>

@if (ViewBag.Error != null)
{
    <p class="text-red-600">@ViewBag.Error</p>
}

<form asp-action="Register" method="post" class="space-y-3">
    <input asp-for="Name" placeholder="Full Name" class="border p-2 w-full rounded" />
    <input asp-for="Email" placeholder="Email" class="border p-2 w-full rounded" />
    <input asp-for="Password" placeholder="Password" type="password" class="border p-2 w-full rounded" />
    <button class="bg-blue-600 text-white px-4 py-2 rounded">Register</button>
</form>

<p class="mt-3 text-gray-600">Already have an account? <a href="/Account/Login" class="text-blue-600">Login</a></p>
