@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model LibraryApp.Models.Book

@{
    var userId = HttpContextAccessor.HttpContext?.Session.GetInt32("UserId");
    bool isLoggedIn = userId != null;
}

<div class="p-6 bg-white rounded-lg shadow">
    <h2 class="text-2xl font-bold mb-2">@Model.Title</h2>
    <p class="text-gray-700 mb-1">Author: <b>@Model.Author</b></p>
    <p class="text-gray-700 mb-1">Genre: @Model.Genre</p>
    <p class="text-gray-700 mb-3">Quantity: <b>@Model.Quantity</b></p>

    @if (isLoggedIn)
    {
        if (Model.Quantity > 0)
        {
            <form asp-controller="Borrow" asp-action="BorrowBook" method="post">
                <input type="hidden" name="bookId" value="@Model.Id" />
                <button class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Borrow</button>
            </form>
        }
        else
        {
            <p class="text-red-600 mt-3">Book currently unavailable.</p>
        }
    }
    else
    {
        <a href="/Account/Login" class="text-blue-600">Login to borrow</a>
    }
</div>
