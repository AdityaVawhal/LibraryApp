@model IEnumerable<dynamic>
<h2 class="text-2xl font-bold mb-4">My Borrowed Books</h2>

<table class="min-w-full bg-white border">
    <thead class="bg-gray-100">
        <tr>
            <th class="p-2 text-left">Title</th>
            <th class="p-2 text-left">Author</th>
            <th class="p-2">Borrow Date</th>
            <th class="p-2">Return</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr class="border-b">
                <td class="p-2">@book.Title</td>
                <td class="p-2">@book.Author</td>
                <td class="p-2">@book.BorrowDate.ToShortDateString()</td>
                <td class="p-2">
                    @if (book.ReturnDate == null)
                    {
                        <form asp-action="ReturnBook" method="post">
                            <input type="hidden" name="recordId" value="@book.Id" />
                            <button class="bg-green-600 text-white px-3 py-1 rounded">Return</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-gray-500">Returned</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
