@model IEnumerable<dynamic>
<h2 class="text-2xl font-bold mb-4">Borrow Records</h2>

<table class="min-w-full bg-white border">
    <thead class="bg-gray-100">
        <tr>
            <th class="p-2 text-left">Book</th>
            <th class="p-2 text-left">Borrower</th>
            <th class="p-2">Borrow Date</th>
            <th class="p-2">Return Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr class="border-b">
                <td class="p-2">@record.BookTitle</td>
                <td class="p-2">@record.Borrower</td>
                <td class="p-2">@record.BorrowDate.ToShortDateString()</td>
                <td class="p-2">@(record.ReturnDate == null ? "Not Returned" : ((DateTime)record.ReturnDate).ToShortDateString())</td>
            </tr>
        }
    </tbody>
</table>
